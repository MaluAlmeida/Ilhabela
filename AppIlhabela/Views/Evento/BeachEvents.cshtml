
@{
    ViewData["Title"] = "BeachEvents";
}

@model AppIlhabela.Models.ViewEventos


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Descrição do Evento</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body>

    <section class="event-details">
        <h2>Descrição do Evento</h2>
        <div class="calendar">
            <!-- Calendário com dias e eventos (exemplo simplificado) -->
            <table>
                <thead>
                    <tr>
                        <th>S</th>
                        <th>T</th>
                        <th>Q</th>
                        <th>Q</th>
                        <th>S</th>
                        <th>S</th>
                        <th>D</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int week = 1; week <= 5; week++)
                    {
                        <tr>
                            @for (int day = 1; day <= 7; day++)
                            {
                                <td>
                                    <span class="event-day">@((week - 1) * 7 + day)</span>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="event-info">
            <h3>@Model.Event.nome</h3>
            <img src="@Model.Event.imagem" alt="Evento" />
            <p>@Model.Event.descriçao</p>
            <p><strong>Data:</strong> @string.Join(", ", Model.Agenda.data)</p>
            <p><strong>Hora:</strong> @Model.Agenda.horario</p>
            <p><strong>Local:</strong> @Model.Loc.logradouro, @Model.Loc.nome, @Model.Loc.numero</p>
            <p><strong>Mais Informações:</strong> <a href="@Model.Event.link">@Model.Event.link</a></p>
        </div>

    </section>
</body>
</html>


<style>
    .events-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

    .event-item {
        text-align: center;
    }

        .event-item img {
            width: 100%;
            height: auto;
        }
</style>

