
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Praias>
@{
    ViewBag.Title = "Eventos nas Praias";
}

<h2>Descubra os principais <b>eventos</b> <br /> que estão acontecendo nas praias!</h2>

<select id="beachSelect" onchange="redEventPraia()">
    <option value="">Selecione a praia</option>
    @foreach (var beach in ViewBag.Beaches)
    {
        <option value="@Url.Action("BeachEvents", "Event", new { beachName = beach })">@beach</option>
    }
</select>
<br /><br />
<center>
<div class="imgs1">
<img src="@Url.Content("~/img/event1.jpeg")" alt="1" style="width: 400px; height:240px;  " />
    <img src="@Url.Content("~/img/event2.jpeg")" alt="2" style="width: 380px; height:240px;  " />
    <img src="@Url.Content("~/img/event3.jpeg")" alt="3" style="width: 220px;  height:240px; " />
</div>
<div class="imgs2">
    <img src="@Url.Content("~/img/event4.jpeg")" alt="4" style="width: 220px; height:240px;  " />
    <img src="@Url.Content("~/img/event5.jpeg")" alt="5" style="width: 400px;height:240px;" />
    <img src="@Url.Content("~/img/event6.jpeg")" alt="6" style="width: 380px; height:240px;  " />
</div>
</center>
<script>
    function redEventPraia() {

        //chama a tela do index
        window.open('Evento/EventDetails');
        //fecha a tela login
        window.close('Evento/Index');
}
</script>

<style>
    .imgs1{
        flex-direction: row;
        margin-top:30px;
        padding:15px;
        margin-bottom: -10px;
    }

    .imgs2 {
        flex-direction: row;
        padding: 15px;
    }

    img{
        padding: 15px;
        padding-bottom:5px;
    }

    body {
        background-color: #5685B1;
        color: white;
    }
    b{
        color: #05335E;
        font-size:30px;

    }
    h2{
      color:white;
